<MyGrid>:

    startbtn: startbtn
    stopbtn: stopbtn
    startentry: startentry
    stopentry: stopentry
    submitbtn: submitbtn
    resetbtn: resetbtn
    activity_dropdown: activity_dropdown
    activity_input: activity_input

    GridLayout:
        cols: 1
        size: root.width, root.height

        GridLayout:
            cols: 2

            # Start Button
            Button:
                id: startbtn
                text: "Start"
                font_size: 40
                background_color: (0,5,0,.7)
                color: (1,1,1,.65)
                on_release: root.start()

            # Stop Button
            Button:
                id: stopbtn
                text: "Stop"
                font_size: 40
                background_color: (5,0,0,.8)
                color: (1,1,1,.65)
                disabled: True
                on_release: root.stop()

            # Start Entry Box
            TextInput:
                id: startentry
                hint_text: "hh.mm"
                multiline: False
                size_hint: (1,.4)

            # Stop Entry Box
            TextInput:
                id: stopentry
                hint_text: "hh.mm"
                multiline: False
                size_hint: (1,.4)

        # Activity Dropdown Menu
        Spinner:
            id: activity_dropdown
            size_hint: (1,.3)
            text: "Choose Activity"
            font_size: 20
            color: (0,.9,.9,1)
            values: ["Activity 1", "Activity 2", "Activity 3"]

        # Activity Entry Box
        TextInput:
            id: activity_input
            hint_text:"Enter Activity"
            multiline: False
            size_hint: (1,.25)

        # Reset Button
        Button:
            id: resetbtn
            text: "Reset"
            font_size: 40
            color: (0,.8,.8,1)
            size_hint: (1,.4)
            on_release: root.default()

        # Submit Button
        Button:
            id: submitbtn
            text: "Submit"
            font_size: 60
            size_hint: (1, .6)
            color: (0,.8,.8,1)
            on_release: root.submit()
